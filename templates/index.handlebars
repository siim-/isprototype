{{> header}}
  <div class="row">
    <div class="five columns">
      <h2>Sign in</h2>
      {{#if error.signin}}
        {{> error error.signin}}
      {{/if}}
      <form method="post">
        <label for="uNameInput">E-mail</label>
        <input class="u-full-width" type="text" name="email" placeholder="user@example.com" id="uNameInput">
        <label for="pwInput">Password</label>
        <input class="u-full-width" type="password" name="password" placeholder="supahsecret" id="pwInput">
        <input class="button-primary" type="submit" value="Sign in">
      </form>
    </div>
  </div>
{{> footer}}