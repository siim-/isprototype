{{> header}}
  <h2>Packages</h2>
  <div class="row">
    <div class="twelve columns">
      <table>
        <thead>
          <tr>
            <th>Package id</th>
            <th>Package status</th>
            <th>Package receiver</th>
            <th>Pickup</th>
            <th>Dropoff</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        {{#each packages}}
          <tr>
            <td>{{id}}</td>
            <td>{{status.statusName}}</td>
            <td>{{receiver.email}}</td>
            <td>{{pickup}}</td>
            <td>{{dropoff}}</td>
            <td>{{#if awaiting_payment}}<a href="{{baseUrl}}?action=pay&id={{id}}" class="menu">Pay</a>{{/if}}</td>
            <td><a href="{{baseUrl}}?action=editPackage&id={{id}}" class="menu">Edit</a></td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{> footer}}