{{> header}}
  <div class="row">
    <div class="twelve columns">
      {{#if values}}
        <h2>Edit package #{{values.id}}</h2>
      {{else}}
        <h2>Add a package</h2>
      {{/if}}
    </div>
  </div>
  {{#if error}}
    {{> error error}}
  {{/if}}
  <div class="row">
    <div class="twelve columns">
      <form method="post">
        {{#unless values}}
        <div class="row">
          <div class="six columns">
            <label for="uNameInput">Receiver e-mail*</label>
            <input class="u-full-width" type="text" name="email" placeholder="user@example.com" id="uNameInput">
          </div>
        </div>
        {{/unless}}
        {{#if privileged}}
          <div class="row">
            <div class="six columns">
              <label for="sender">Sender*</label>
              <select class="u-full-width" name="senderId" id="sender">
                {{#each users}}
                  <option value="{{id}}" {{#if sender}}selected="selected"{{/if}}>{{email}}</option>
                {{/each}}
              </select>
            </div>
            <div class="six columns">
              <label for="receiver" {{#if receiver}}selected="selected"{{/if}}>Receiver*</label>
              <select class="u-full-width" name="receiverId" id="receiver">
                {{#each users}}
                  <option value="{{id}}" {{#if receiver}}selected="selected"{{/if}}>{{email}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="row">
            <div class="six columns">
              <label for="status">Status*</label>
              <select class="u-full-width" name="status" id="status">
                {{#each status}}
                  <option value="{{id}}" {{#if current}}selected="selected"{{/if}}>{{statusName}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        {{/if}}

        {{#unless receiver}}
        <div class="row">
          <div class="six columns">
            <label for="pwInput">Weight*</label>
            <input class="u-full-width" type="text" name="weight" placeholder="200 (grams)" id="pwInput" value="{{values.weight}}">
          </div>
          <div class="six columns">
            <label for="height">Height*</label>
            <input class="u-full-width" type="text" name="height" placeholder="120.4 (cm)" id="height" value="{{values.height}}">
          </div>
        </div>
        <div class="row">
          <div class="six columns">
            <label for="width">Width*</label>
            <input class="u-full-width" type="text" name="width" placeholder="120.4 (cm)" id="width" value="{{values.width}}">
          </div>
          <div class="six columns">
            <label for="depth">Depth*</label>
            <input class="u-full-width" type="text" name="depth" placeholder="120.4 (cm)" id="depth" value="{{values.depth}}">
          </div>
        </div>
        {{/unless}}
        <div class="row">
          <div class="six columns">
            {{#unless receiver}}
              <label for="datetimepicker">Recommended pickup*</label>
              <input class="u-full-width" name="pickup" id="datetimepicker" type="text" value="{{values.pickup}}">
            {{else}}
              <label for="datetimepicker">Recommended dropoff*</label>
              <input class="u-full-width" name="dropoff" id="datetimepicker" type="text" value="{{values.dropoff}}">
            {{/unless}}
          </div>
          {{#if privileged}}
            <div class="six columns">
              <label for="datetimepicker2">Recommended dropoff*</label>
              <input class="u-full-width datetimepicker" name="dropoff" id="datetimepicker2" type="text" value="{{values.dropoff}}">
            </div>
          {{/if}}
        </div>
        <div class="row">
          <div class="twelve columns">
            {{#if values}}
              <input class="button-primary" type="submit" value="Save package">
            {{else}}
              <input class="button-primary" type="submit" value="Register package">
            {{/if}}
          </div>
        </div>
      </form>
    </div>
  </div>
{{> footer}}